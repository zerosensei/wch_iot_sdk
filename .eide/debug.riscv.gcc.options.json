{
    "version": 1,
    "beforeBuildTasks": [
        {
            "name": "genconfig",
            "disable": false,
            "abortAfterFailed": false,
            "stopBuildAfterFailed": true,
            "command": "python ${ProjectRoot}\\script\\kconfig\\kconfig.py ${ProjectRoot}\\Kconfig ${OutDir}\\.config ${OutDir}\\auto_config.h ${OutDir}\\source.txt ${ProjectRoot}\\samples\\basic\\button\\prj.conf"
        }
    ],
    "afterBuildTasks": [
        {
            "name": "output lst file",
            "disable": false,
            "abortAfterFailed": false,
            "command": "riscv-none-embed-objdump --source --all-headers --demangle --disassemble \"${OutDir}\\${targetName}.elf\" > \"${OutDir}\\${targetName}.lst\"\n"
        }
    ],
    "global": {
        "output-debug-info": "enable",
        "arch": "rv32imac",
        "abi": "ilp32",
        "code-model": "medany",
        "misc-control": "-msmall-data-limit=8 -mno-save-restore"
    },
    "c/cpp-compiler": {
        "language-c": "c99",
        "language-cpp": "c++11",
        "optimization": "level-size",
        "warnings": "all-warnings",
        "C_FLAGS": "-Wl,-Bstatic -ffunction-sections -fdata-sections -fmessage-length=0 -fsigned-char -fno-common"
    },
    "asm-compiler": {
        "ASM_FLAGS": "-Wl,-Bstatic",
        "defines": [
            "CONFIG_RISCV"
        ]
    },
    "linker": {
        "output-format": "elf",
        "LD_FLAGS": "-Wl,--cref -Wl,--gc-sections --specs=nosys.specs --specs=nano.specs -nostartfiles",
        "LIB_FLAGS": "-lISP573 -lCH57xBLE -lprintfloat",
        "remove-unused-input-sections": true
    }
}