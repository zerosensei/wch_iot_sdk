menu "SoC Configration"

choice
    prompt "SoC Series"

    config SOC_SERIES_CH57X
        bool "WCH CH57X series MCU"
        select RISCV
        select TICKLESS_CAPABLE
        help
          Enable support for CH57X series MCU

    config SOC_SERIES_CH58X
        bool "WCH CH58X series MCU"
        select RISCV
        select TICKLESS_CAPABLE
        help
          Enable support for CH58X series MCU

endchoice

if SOC_SERIES_CH57X
    osource "soc/$(ARCH)/ch57x/Kconfig.ch57x"
endif

if SOC_SERIES_CH58X
    osource "soc/$(ARCH)/ch58x/Kconfig.ch58x"
endif

module = SOC
module-str = SOC
source "subsys/logging/Kconfig.template.log_config"

endmenu